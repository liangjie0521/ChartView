<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleChartView">
        <attr name="chart_bar_width" format="dimension" />
        <attr name="chart_bar_corners" format="boolean" />
        <attr name="chart_bar_animation" format="boolean" />
        <attr name="chart_bar_backgroundColor" format="color" />
        <attr name="chart_mode">
            <enum name="pie" value="0" />
            <enum name="bar" value="1" />
        </attr>
        <attr name="chart_total_value" format="float" />
    </declare-styleable>
    <declare-styleable name="LineChartView">
        <!--        是否绘制 x 、y轴-->
        <attr name="line_chart_axis">
            <enum name="none" value="0" />
            <enum name="x" value="1" />
            <enum name="y" value="2" />
            <enum name="xy" value="3" />
        </attr>
        <!--        是否是曲线-->
        <attr name="line_chart_smooth" format="boolean" />
        <!--        标签文本大小-->
        <attr name="line_chart_label_size" format="dimension" />
        <!--        标签颜色-->
        <attr name="line_chart_label_color" format="color" />
        <!--        x轴标签数量-->
        <attr name="line_chart_axis_x_num" format="integer" />
        <!--        y轴标签数量-->
        <attr name="line_chart_axis_y_num" format="integer" />
        <!--        线条宽度-->
        <attr name="line_chart_line_width" format="dimension" />
        <!-- 是否绘制曲线渐变背景-->
        <attr name="line_chart_line_shader" format="boolean" />
        <!--        虚线颜色-->
        <attr name="line_chart_dash_color" format="color" />
        <!--        是否绘制线条阴影-->
        <attr name="line_chart_shadow" format="boolean" />
        <!--        线条阴影radius-->
        <attr name="line_chart_shadow_radius" format="dimension" />
        <!--        线条阴影dx-->
        <attr name="line_chart_shadow_dx" format="dimension" />
        <!--        线条阴影dy-->
        <attr name="line_chart_shadow_dy" format="dimension" />
    </declare-styleable>
</resources>